{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "declaration": false,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "types": ["requirejs"],
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "include": [
    "src/**/*.ts"
  ]
}